<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.kaefik.isaifutdinov.an_wether_prj.cityInfoActivity"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="СЕЙЧАС"
        android:id="@+id/textView3"
        android:layout_row="2"
        android:layout_column="0"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="город"
        android:id="@+id/nameCity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_row="2"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="температура"
        android:id="@+id/textView4"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="temp"
            android:id="@+id/tempCity"
            android:layout_below="@+id/nameCity"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_row="3"
            android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="скорость ветра"
        android:id="@+id/textView5"
        android:layout_row="4"
        android:layout_column="0" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="windspeed"
            android:id="@+id/windspeedCity"
            android:layout_below="@+id/pressureCity"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_row="4"
            android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="направление ветра"
        android:id="@+id/textView6"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="winddirection"
        android:id="@+id/winddirectionCity"
        android:padding="5dp"
        android:layout_below="@+id/windspeedCity"
        android:layout_centerHorizontal="true"
        android:layout_row="5"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="влажность"
        android:id="@+id/textView7"
        android:layout_row="6"
        android:layout_column="0" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="вл-ть"
            android:id="@+id/huminidityCity"
            android:padding="5dp"
            android:layout_below="@+id/cloudsCity"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:layout_row="6"
            android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Обновлено около:"
        android:id="@+id/textView10"
        android:layout_row="10"
        android:layout_column="0"
        android:textStyle="bold" />

    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="время обновления: "
            android:id="@+id/textTimeRefresh"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/winddirectionCity"
            android:layout_alignEnd="@+id/winddirectionCity"
            android:layout_row="10"
            android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="clouds"
        android:id="@+id/textView9"
        android:layout_row="8"
        android:layout_column="0" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="clouds"
            android:id="@+id/cloudsCity"
            android:padding="5dp"
            android:layout_below="@+id/tempCity"
            android:layout_alignLeft="@+id/tempCity"
            android:layout_alignStart="@+id/tempCity"
            android:layout_row="8"
            android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="давление"
        android:id="@+id/textView8"
        android:layout_row="7"
        android:layout_column="0" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="pressure"
            android:id="@+id/pressureCity"
            android:layout_below="@+id/huminidityCity"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_row="7"
            android:layout_column="1" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать город"
            android:id="@+id/btnBack"
            android:padding="15dp"
            android:onClick="onClickgoBackMainActivity"
            android:layout_below="@+id/winddirectionCity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="11"
            android:layout_column="0" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обновить"
            android:id="@+id/btnRefreshInfo"
            android:padding="15dp"
            android:layout_below="@+id/winddirectionCity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onClickRefreshDataWeather"
            android:nestedScrollingEnabled="false"
            android:layout_row="11"
            android:layout_column="1" />


</GridLayout>
